import styles from "./ui/link.astro";
import Link from "./ui/link.astro";

const logos = [
  {
    name: "Fineurop",
    src: "src/assets/logos/fineurop-logo.png",
    width: "100",
    height: "50",
    url: "https://fineurop.it",
  },
  {
    name: "Hines",
    src: "/src/assets/logos/hines-logo.png",
    width: "140",
    height: "40",
    url: "https://hines.com",
  },
  {
    name: "Merrill Lynch",
    src: "/src/assets/logos/merrill_lynch-logo.png",
    width: "90",
    height: "60",
    url: "https://blackrock.com",
  },
  {
    name: "UBS",
    src: "/src/assets/logos/UBS-logo.png",
    width: "120",
    height: "35",
    url: "https://ubs.com",
  },
];
---

<div class="mt-24">
  <h2 class="text-center text-slate-500">Comapnies I worked for as employee</h2>
  <div class="flex gap-8 md:gap-20 items-center justify-center mt-10 flex-wrap">
    {
      logos.map((logo, index) => (
        <Link style="transparent" href={logo.url} target="_blank">
          <Image
            alt={logo.name}
            src={logo.src}
            width={logo.width}
            height={logo.height}
            sizes="100"
            widths={["200", "500", "700"]}
          />
        </Link>
      ))
    }

